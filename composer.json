{
  "name": "shawnmccool/minimal-php-postmark-sdk",
  "description": "A minimal PHP Postmark SDK that enables you to send single and batched email through the PostmarkApp.com service.",
  "license": "MIT",
  "require": {
    "php": "^8",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.x-dev"
  },
  "authors": [
    {
      "name": "Shawn McCool",
      "email": "shawn@mccool.email"
    }
  ],
  "autoload": {
    "psr-4": {
      "MinimalPhpPostmarkSdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "bin-dir": "bin"
  },
  "minimum-stability": "stable"
}